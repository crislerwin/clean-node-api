{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "An node js api with clean architecture",
  "private": false,
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "tsc",
    "test:coverage": "vitest run --coverage",
    "test": "vitest run",
    "test:ci": "pnpm test -- --coverage",
    "test:dev": "vitest --watch",
    "test:staged": "pnpm run test -- --filter $(git diff --cached --name-only | grep -E '\\.test\\.ts$')",
    "ci": "pnpm run test:ci && pnpm run lint",
    "release": "pnpm run lint && pnpm run test && changeset publish"
  },
  "keywords": [],
  "author": "Crisler Wintler",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "@vitest/coverage-c8": "^0.28.5",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "2.8.4",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.28.5"
  }
}
