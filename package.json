{
  "name": "clean-node-api",
  "version": "1.3.0",
  "description": "An node js api with clean architecture",
  "private": false,
  "main": "index.js",
  "keywords": [],
  "author": "Crisler Wintler",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main/server.js",
    "prepare": "husky install",
    "lint": "eslint --ext .ts src/",
    "test": "vitest run",
    "debug": "tsnd --inspect=0.0.0.0:9222 --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register src/main/server.ts",
    "build": "rimraf dist && npm run lint && tsup src/* -- format cjs,esm --dts --sourcemap --external validator",
    "dev": "tsnd --respawn --transpile-only --ignore-watch node_modules -r tsconfig-paths/register src/main/server.ts",
    "test:ci": "npm test -- --coverage",
    "test:dev": "vitest",
    "test:integration": "vitest",
    "test:staged": "npm run test && npm run lint",
    "build:ci": "npm run test:ci && npm run build",
    "pretty": "prettier --write **/*.{js,ts,md,json}"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^4.0.3",
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.6",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.17",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.58.0",
    "@vitest/coverage-c8": "^0.31.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "mongodb-memory-server": "^8.11.5",
    "prettier": "2.8.7",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vitest": "^0.30.0"
  },
  "engines": {
    "node": "18.15.0",
    "npm": "9.5.0"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.1",
    "bcrypt": "^5.1.0",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^5.1.0",
    "validator": "^13.9.0"
  }
}
