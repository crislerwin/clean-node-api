{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/": ["/src/"],
      "@main/": ["/src/main/"],
      "@infra/": ["/src/infra/"],
      "@data/": ["/src/data/"],
      "@presentation/": ["/src/presentation/"],
      "@domain/": ["/src/domain/"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
