{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "incremental": false,
    "noEmit": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": "src",
    "sourceMap": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["**/*.spec.ts"]
}
